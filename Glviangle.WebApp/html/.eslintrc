{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1,
        "ObjectExpression": 1
      }
    ],
    "semi": [2, "always"],
    "linebreak-style": 0,
    "consistent-return": 0,
    "no-use-before-define": 0,
    "no-multi-assign": 0,
    "no-lonely-if": 1,
    "no-nested-ternary": 0,
    "wrap-iife": [2, "inside"],
    "generator-star-spacing": 0,
    "keyword-spacing": [2, {
      "before": true
    }],
    "eqeqeq": [2, "always"],
    "space-infix-ops": [2, {
      "int32Hint": false
    }],
    "spaced-comment": 2,
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "block-spacing": [2, "always"],
    "no-else-return": 2,
    "css-modules/no-unused-class": [2, {
      "camelCase": true
    }],
    "css-modules/no-undef-class": [2, {
      "camelCase": true
    }]
  },
  "extends": [
    "eslint:recommended", "plugin:css-modules/recommended"
  ],
  "plugins": [
    "pug", "css-modules"
  ],
  "settings": {
    "pug": {
      "version": "detect"
    }
  }
}
